<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.TheMovieDB" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@color/dark_blue</item>
        <!--        <item name="android:statusBarColor">@android:color/transparent</item>-->
        <item name="android:navigationBarColor">@color/dark_blue</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Theme.TheMovieDB.SplashScreen" parent="Theme.SplashScreen">
        <item name="android:statusBarColor">@color/dark_blue</item>
        <item name="android:navigationBarColor">@color/dark_blue</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="postSplashScreenTheme">@style/Theme.TheMovieDB</item>
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">@color/dark_blue</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenBackground">@color/dark_blue</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
    </style>
</resources>